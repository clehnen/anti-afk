{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": [
    "google"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "no-unused-vars": "warn",
    "padded-blocks": "off",
    "linebreak-style": "off",
    "max-len": [
      "warn",
      {
        "code": 80
      }
    ],
    "require-jsdoc": "off"
  }
}
